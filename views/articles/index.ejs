<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">    <title>Blog</title>
</head>
<body>
    <div class="container">
        <center>
            <h1 class="center-title">BlogDat</h1>
        </center>
        <h1 class="mb-4">Blog Articles</h1>
        <a href="/articles/new" class="btn btn-success">New Article</a>
        <% article.forEach(article => { %>
                <div class="card mt-4">
                    <div class="card-body">
                       <h4 class="card-title"> <%=article.title%> </h4>
                       <div class="card-subtitle text-muted mb-2">
                        <%- article.createdAt.toLocaleDateString() %>
                       </div>
                       <div class="card-description mb-2">
                           <%- article.description %>
                       </div>
                       <a href="articles/<%=article.slug%>" class="btn btn-primary">Read More</a>
                       <form class="d-inline" action="articles/<%= article.id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger" type="submit">Delete</button>
                    </form>
                    </div>

                </div>

       <% }); %>
    </div>


</body>
</html>